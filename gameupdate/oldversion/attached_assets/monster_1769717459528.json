// Combined monster array
export const ALL_MONSTERS = [...MONSTERS, ...ADDITIONAL_MONSTERS];

// Updated getRandomMonster function to include all monsters
export function getRandomMonsterEnhanced(floor: number): Monster {
  // Monster tiers unlock based on floor depth with more gradual progression:
  // Floor 1-2: Early monsters only (indices 0-8)
  // Floor 3-5: + Early additional monsters (indices 9-39) - Forest/Water monsters
  // Floor 6-8: + Mid-tier monsters (indices 40-89) - Fire/Air/Ice/Electric monsters
  // Floor 9-12: + Advanced monsters (indices 90-149) - Poison/Holy/Shadow/Crystal/Mechanical/Undead
  // Floor 13-16: + Mythical monsters (indices 150-199) - Mythical/Insectoid/Plant/Hybrid
  // Floor 17+: All monsters including bosses (indices 200-230)
  
  let maxIndex: number;
  if (floor <= 2) {
    maxIndex = 9;  // Original early monsters only
  } else if (floor <= 5) {
    maxIndex = 40; // + Forest/Water monsters
  } else if (floor <= 8) {
    maxIndex = 90; // + Fire/Air/Ice/Electric
  } else if (floor <= 12) {
    maxIndex = 150; // + Poison/Holy/Shadow/Crystal/Mechanical/Undead
  } else if (floor <= 16) {
    maxIndex = 200; // + Mythical/Insectoid/Plant/Hybrid/Celestial
  } else {
    maxIndex = ALL_MONSTERS.length; // All monsters including bosses
  }
  
  const index = Math.floor(Math.random() * maxIndex);
  const base = ALL_MONSTERS[index];
  
  // Scale stats based on floor (more aggressive scaling for higher floors)
  const floorMultiplier = 1 + (floor * 0.15); // 15% increase per floor
  const hpMultiplier = 1 + (floor * 0.2); // 20% HP increase per floor
  const goldMultiplier = 1 + (floor * 0.25); // 25% more gold per floor
  
  return {
    ...base,
    id: crypto.randomUUID(),
    hp: Math.floor(base.hp * hpMultiplier),
    maxHp: Math.floor(base.maxHp * hpMultiplier),
    attack: Math.floor(base.attack * floorMultiplier),
    defense: Math.floor(base.defense * floorMultiplier),
    speed: Math.floor(base.speed * (1 + (floor * 0.05))), // Slight speed increase
    goldValue: Math.floor(base.goldValue * goldMultiplier),
    xpValue: Math.floor(base.xpValue * (1 + (floor * 0.2))), // 20% more XP per floor
  };
}